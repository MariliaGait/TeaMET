import java.util.Arrays;

public class RemoveNegativeInterests {

    // Μέθοδος για αφαίρεση προτάσεων που περιέχουν τη λέξη "Όχι"
    public static String removeNegativeInterests(String interests) {
        // Διαχωρίζει τις προτάσεις με βάση το κόμμα
        String[] interestArray = interests.split(", ");

        // Φιλτράρει τις προτάσεις που δεν περιέχουν τη λέξη "Όχι"
        String[] filteredInterests = Arrays.stream(interestArray)
                .filter(interest -> !containsIgnoreCase(interest, "Όχι"))
                .toArray(String[]::new);

        // Συνενώνει τα εναπομείναντα ενδιαφέροντα με κόμμα
        return String.join(", ", filteredInterests);
    }

    // Ελέγχει αν μια πρόταση περιέχει τη λέξη "Όχι" (αγνοεί την πεζή/κεφαλαία)
    private static boolean containsIgnoreCase(String input, String keyword) {
        return input.trim().toLowerCase().contains(keyword.toLowerCase());
    }}
